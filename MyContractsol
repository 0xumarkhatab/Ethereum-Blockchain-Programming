pragma solidity >=0.7.0 <0.9.0;

/**
 * @title Storage
 * @dev Store & retrieve value in a variable
 */
contract MyContract{

mapping(address => uint) public balances;
address owner;

error NotTheOwner(string);


constructor(){
owner = tx.origin;
}

modifier onlyOwner(){
    string memory message ="Only Owner is Allowed";

    if(owner != msg.sender)
        revert NotTheOwner(message);
    else
        require(true);
_;


}


function IncrementBalances() public onlyOwner{

balances[msg.sender] +=1;

}



}
